{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "webpack.config.ts"
  ]
}